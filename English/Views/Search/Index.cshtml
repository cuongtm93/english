

@model List<English.Data.Lesson>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class=""></div>
</div>
<div class="row">
    <div class="col-6">
        <h4>Tìm thấy @ViewBag.TotalFound trong tổng số <span class="text-danger">@ViewBag.SetencesCount</span> câu</h4>
        <h5>Thời gian máy @ViewBag.ElapsedMilliseconds miliseconds</h5>
    </div>
    <div class="col-6">
        <form asp-action="Index" asp-controller="Search">
            <input class="control" type="text" style="width:70%" name="keyword" />
            <button type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>
    @if (Model.Count == 0)
    {
        return;
    }


    <table class="table table-responsive">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tên bài</th>
                <th scope="col">Tiếng việt</th>
                <th scope="col">Cập nhật</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in Model)
            {
                <tr>
                    <th scope="row">@lesson.id</th>
                    <td>
                        <a asp-action="Learn" asp-controller="Home" asp-route-id="@lesson.id">
                            @lesson.title
                        </a>
                    </td>
                    <td style="max-width:500px">
                        @if (lesson.vietnamese_text != null && lesson.vietnamese_text.Length >= 100)
                        {
                            <span>@Html.Raw(lesson.vietnamese_text.Substring(0, 100))</span>
                        }
                        else
                        {
                            <span>@Html.Raw(lesson.vietnamese_text)</span>
                        }
                    </td>
                    <td>@lesson.date_modified</td>
                    <td style="width: 155px;">
                        <a asp-action="Edit" asp-controller="Home" asp-route-id="@lesson.id" title="Sửa '@lesson.title'">
                            <div class="btn btn-primary">
                                <i class="fas fa-pencil-alt"></i>
                            </div>
                        </a>
                        <a asp-action="Delete" asp-controller="Home" asp-route-id="@lesson.id" onclick="return confirm('Bạn có thật sự muốn xoá không?');" title="Xoá '@lesson.title'">
                            <div class="btn btn-danger" style="margin-left : 10px;">
                                <i class="far fa-trash-alt"></i>
                            </div>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>






