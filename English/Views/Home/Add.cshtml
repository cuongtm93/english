@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        Vue.component('language', {
            props: ['name'],
            template: `<div class="col-sm-12">
                        <textarea :id="name" rows=10 :name="name" style="width:100%"></textarea>
                    </div>`
        });

        Vue.component('Button-Submit', {
            props: ['name'],
            template: `<div class="col-sm-12">
                        <textarea :id="name" :name="name"></textarea>
                    </div>`
        });
        new Vue({
            el: '#app'
        });
    </script>
}
<div id="app">
    <div class="container-fluid" style="padding :0!important">
        <form asp-action="Add" asp-controller="Home" method="post">
            <div class="row">
                <div class="col-sm-12">
                    <input class="form-control" type="text" name="title" placeholder="Nhập tiêu đề" style="width:100%;" />
                </div>
            </div>
            <div class="row" style="margin-top : 10px;">
                <div class="col-sm-6">
                    <textarea id="english_text" rows=13 name="english_text" style="width:100%" placeholder="Nhập nội dung english"></textarea>
                </div>
                <div class="col-sm-6">
                    <textarea  class="form-control" id="vietnamese_text" rows=13 name="vietnamese_text" style="width:100%" placeholder="Nhập bản dịch"></textarea>
                </div>
            </div>
            <div class="row" style="margin-top : 10px;">
                <div class="col-sm-10"></div>
                <div class="col-sm-2" style="position : relative; float:right!important">
                    <button class="btn btn-success" style="float:right">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


